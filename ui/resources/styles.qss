
/* Global Styles */
QMainWindow {
    background-color: #f8fafc; /* Very light background for strong contrast */
    color: #222222;
}

QWidget {
    font-family: 'Segoe UI', 'Roboto', sans-serif;
    font-size: 14px;
    color: #222222;
}

/* Sidebar */
QFrame#Sidebar {
    background-color: #042743; /* Darker, cooler blue for contrast */
    border-right: 1px solid #021726;
}

QPushButton#NavButton {
    background-color: transparent;
    border: none;
    border-radius: 8px;
    color: #dbeafe; /* light, readable text on dark sidebar */
    text-align: left;
    padding: 12px 20px;
    font-weight: 600;
}

QPushButton#NavButton:hover {
    background-color: #063b60;
    color: #ffffff;
}

QPushButton#NavButton:checked {
    background-color: #ffffff;
    color: #042743;
}

/* Content Area */
QFrame#Content {
    background-color: #f0f4f8;
}

QLabel#HeaderTitle {
    font-size: 24px;
    font-weight: bold;
    color: #042743;
    margin-bottom: 20px;
}

/* Cards / Containers */
QFrame#Card {
    background-color: #ffffff;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
}

/* Table View */
QTableWidget {
    background-color: #ffffff;
    alternate-background-color: #f8fafc;
    gridline-color: #e6eef8;
    border: 1px solid #e6eef8;
    border-radius: 8px;
    selection-background-color: #cfeefd;
    selection-color: #042743;
    color: #222222;
}

QHeaderView::section {
    background-color: #042743;
    color: #ffffff;
    padding: 8px;
    border: none;
    border-bottom: 2px solid #021726;
    font-weight: bold;
}

QTableWidget::item {
    padding: 5px;
    border-bottom: 1px solid #f1f5f9;
}

/* Buttons */
QPushButton#ActionButton {
    background-color: #007acc;
    color: #ffffff;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    font-weight: bold;
}

QPushButton#ActionButton:hover {
    background-color: #006bb3;
}

QPushButton#ActionButton:pressed {
    background-color: #005c99;
}

QPushButton#DangerButton {
    background-color: #ef4444;
    color: #ffffff;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    font-weight: bold;
}

QPushButton#DangerButton:hover {
    background-color: #dc2626;
}

/* Input Fields */
QLineEdit {
    background-color: #ffffff;
    border: 1px solid #cbd5e1;
    border-radius: 6px;
    color: #222222;
    padding: 8px;
}

QLineEdit:focus {
    border: 1px solid #007acc;
}

QLineEdit::placeholder {
    color: #6b7280; /* visible but muted placeholder */
}

/* Scrollbars */
QScrollBar:vertical {
    border: none;
    background: #f1f5f9;
    width: 10px;
    margin: 0px 0px 0px 0px;
}

QScrollBar::handle:vertical {
    background: #cbd5e1;
    min-height: 20px;
    border-radius: 5px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    border: none;
    background: none;
}

QScrollArea {
    background-color: transparent;
    border: none;
}

QScrollArea > QWidget > QWidget {
    background-color: transparent;
}

/* ComboBox */
QComboBox {
    background-color: #ffffff;
    border: 1px solid #cbd5e1;
    border-radius: 6px;
    padding: 5px;
    color: #222222;
}

QComboBox:drop-down {
    border: none;
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    color: #333333;
    selection-background-color: #e0f2fe;
    selection-color: #003366;
}
